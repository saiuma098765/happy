<script>
  function showWish() {
    let name = document.getElementById("name").value;
    if (name.trim() === "") {
      alert("Please enter your name");
      return;
    }
    document.getElementById("result").innerHTML =
      "ðŸŽ‰ Happy New Year, <b>" + name + "</b>! ðŸŽ‰";
  }
